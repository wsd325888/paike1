<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.zm.paipai.pinglunactivity.XinxiActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/letter"
        android:background="@null"
        />
    <ImageView
        android:id="@+id/iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/amc1"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="130dp"
        android:textColor="#030303"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/iv"
        android:layout_marginLeft="45dp"
        android:text="1w"
        android:textColor="#030303"
        />
    <View
        android:id="@+id/v"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:background="#030303"
        android:layout_toRightOf="@id/tv2"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="122"
        android:layout_toRightOf="@id/v"
        android:layout_marginTop="60dp"
        android:textColor="#030303"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv3"
        android:layout_marginTop="60dp"
        android:text="关注"
        android:textColor="#030303"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="+关注"
        android:background="@drawable/guanzhu_biankuang"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="100dp"
        android:textColor="#FF8247"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="作品"
            android:background="@null"
            android:layout_marginTop="120dp"
            android:textColor="#030303"
            />
        <Button
            android:layout_toRightOf="@id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="微店"
            android:background="@null"
            android:textColor="#030303"
            android:layout_marginTop="120dp"/>
    </LinearLayout>
</RelativeLayout>
