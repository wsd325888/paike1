<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer">
    <!-- 内容部分分为：各模块显示区域，模块导航tab -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 设置参照物，撑满整个页面（RelativeLayout） -->
        <View
            android:id="@+id/struct"
            android:background="#f00"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            />
        <FrameLayout
            android:id="@+id/fl_content"
            android:background="#ccc"
            android:layout_toRightOf="@id/struct"
            android:layout_alignTop="@id/struct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_below="@id/fl_content"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="80dp">
            <RadioButton
                android:id="@+id/rb_rb1"
                android:text="关注"
                android:textSize="24sp"
                style="@style/radiotab"
                android:background="@drawable/main_bottom_item_bg"
                android:layout_weight="1"
                />
            <RadioButton
                android:id="@+id/rb_rb2"
                android:text="热门"
                android:textSize="24sp"
                style="@style/radiotab"
                android:background="@drawable/main_bottom_item_bg"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/rb_rb3"
                android:text="附近"
                android:textSize="24sp"
                style="@style/radiotab"
                android:background="@drawable/main_bottom_item_bg"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/rb_rb4"
               style="@style/radiotab"
              android:drawableRight="@drawable/camera"
                android:background="@drawable/main_bottom_item_bg"
                android:layout_weight="1" />
        </RadioGroup>
</LinearLayout>
    </RelativeLayout>
    <!-- 菜单部分：通常是一个listview -->
    <!-- 菜单部分   android:layout_gravity="left" 指定菜单滑出方向 -->
    <ListView
        android:id="@+id/left_drawer1"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" ></ListView>

</android.support.v4.widget.DrawerLayout>

